@page
@model EFTest2.Areas.Admin.Pages.Blogs.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].PrimaryAuthor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Blog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryAuthor.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BlogId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BlogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
